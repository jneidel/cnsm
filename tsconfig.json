{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "baseUrl": ".",
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "strict": true,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": false,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "experimentalDecorators": true
  },
  "include": ["cli.ts", "lib"],
  "excude": ["node_modules", "test"]
}
